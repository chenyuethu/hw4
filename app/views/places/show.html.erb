<% if @current_user %>
  <h1><%= @place["name"] %></h1>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary" role="button">New Post</a>
 
  <hr>

  <div class="row">
    <% for post in @posts %>
      <div class="col-md-3 col-sm-6">
        <h4><%= post["title"] %></h3>
        <h6><%= post["posted_on"] %></h4>

            <% if post.uploaded_image.attached? %>
                    <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
            <% end %>
        <p> <%= post["description"] %></p>
      </div>
    <% end %>
  </div>

<% end %>
  <p>
    <a href="/places" class="btn btn-primary" role="button" >Back to all places</a>
  </p>